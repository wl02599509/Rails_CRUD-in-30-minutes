<h1>Books index</h1>

<%= link_to 'New', new_book_path %>

<table>
  <thead>
    <tr>
      <td>Title</td>
      <td>Content</td>
      <td>Price</td>
      <td>Other Function</td>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.content %></td>
      <td><%= book.price %></td>
      <td><%= link_to 'edit', edit_book_path(book.id) %>
          <%= link_to 'delete', book_path(book.id), method: 'DELETE', data:{confirm: 'Are you sure!?'} %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>